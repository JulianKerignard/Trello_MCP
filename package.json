{
  "name": "mcp-trello-advanced",
  "version": "2.1.0",
  "description": "MCP Server for Trello API integration with attachments, duplication & bulk operations",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "npm run build && node build/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "pack:mcpb": "npm install --production && npx @anthropic-ai/mcpb pack",
    "clean": "rm -rf build/ node_modules/ *.mcpb",
    "clean:build": "rm -rf build/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "trello",
    "model-context-protocol",
    "trello-api",
    "claude",
    "ai-tools"
  ],
  "author": "Julian Kerignard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JulianKerignard/Trello_MCP.git"
  },
  "bugs": {
    "url": "https://github.com/JulianKerignard/Trello_MCP/issues"
  },
  "homepage": "https://github.com/JulianKerignard/Trello_MCP#readme",
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
